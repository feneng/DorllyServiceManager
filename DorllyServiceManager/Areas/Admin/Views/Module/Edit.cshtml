@model DorllyService.Domain.Module
@{
    Layout = null;
    ViewBag.Title = "修改菜单";
}

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <form role="form" method="post" asp-area="admin" asp-controller="module" asp-action="edit" id="editform">
            <input asp-for="Id" type="hidden" />
            <div class="form-title">
                基本信息
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Name"></label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="菜单名">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Type"></label>
                    <select asp-for="Type" class="form-control">
                        <option value="1">目录</option>
                        <option value="2">菜单</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Icon"></label>
                    <input type="text" class="form-control" asp-for="Icon" />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="ParentId"></label>
                    <input type="text" class="form-control" asp-for="Parent.Name" readonly="readonly">
                    <input type="hidden" asp-for="ParentId">
                    <span asp-validation-for="ParentId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="BelongSystemId"></label>
                    <select asp-for="BelongSystemId" class="form-control" asp-items="ViewBag.SubSystems">
                        <option value="">-- 选择所属系统 --</option>
                    </select>
                    <span asp-validation-for="BelongSystemId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Level"></label>
                    <input type="text" class="form-control" asp-for="Level">
                    <span asp-validation-for="Level" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Order"></label>
                    <input type="text" class="form-control" asp-for="Order">
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Path"></label>
                    <input type="text" class="form-control" asp-for="Path">
                    <span asp-validation-for="Path" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Status"></label>
                    <select asp-for="Status" class="form-control">
                        <option value="True">启用</option>
                        <option value="False">禁用</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>
