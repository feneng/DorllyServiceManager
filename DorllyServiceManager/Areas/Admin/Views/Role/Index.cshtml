@model List<DorllyService.Domain.Role>
@{
    ViewBag.Title= "角色列表";
}

@section styles{
    <environment include="Development">
        <link href="~/Admin/css/dataTables.bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/Admin/css/dataTables.bootstrap.css" rel="stylesheet" />
    </environment>
}

<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">@ViewBag.Title</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    <a href="#" data-toggle="dispose">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <a id="editabledatatable_new" asp-action="create" class="btn btn-success">
                        添加角色
                    </a>
                    <div class="btn-group pull-right">
                        <a class="btn btn-default" href="javascript:void(0);">Tools</a>
                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);"><i class="fa fa-angle-down"></i></a>
                        <ul class="dropdown-menu dropdown-default">
                            <li>
                                <a href="javascript:void(0);">Action</a>
                            </li>
                            <li>
                                <a href="javascript:void(0);">Another action</a>
                            </li>
                            <li>
                                <a href="javascript:void(0);">Something else here</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="javascript:void(0);">Separated link</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered" id="editabledatatable">
                    <thead>
                        <tr role="row">
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().Code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().Description)
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(p=>item.Code)</td>
                                <td>@Html.DisplayFor(p=>item.Name)</td>
                                <td>@Html.DisplayFor(p=>item.Status)</td>
                                <td>@Html.DisplayFor(p=>item.Description)</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-xs edit"><i class="fa fa-info"></i> 查看</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-xs edit"><i class="fa fa-edit"></i> 编辑</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs delete"><i class="fa fa-trash-o"></i> 删除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!--Page Related Scripts-->
    <environment include="Development">
        <script src="~/Admin/js/datatable/jquery.dataTables.min.js"></script>
        <script src="~/Admin/js/datatable/ZeroClipboard.js"></script>
        <script src="~/Admin/js/datatable/dataTables.tableTools.min.js"></script>
        <script src="~/Admin/js/datatable/dataTables.bootstrap.min.js"></script>
        <script src="~/Admin/js/datatable/datatables-init.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/Admin/js/datatable/jquery.dataTables.min.js"></script>
        <script src="~/Admin/js/datatable/ZeroClipboard.js"></script>
        <script src="~/Admin/js/datatable/dataTables.tableTools.min.js"></script>
        <script src="~/Admin/js/datatable/dataTables.bootstrap.min.js"></script>
        <script src="~/Admin/js/datatable/datatables-init.js"></script>
    </environment>
    <script>//InitiateSimpleDataTable.init();
        //InitiateEditableDataTable.init();
        //InitiateExpandableDataTable.init();
        //InitiateSearchableDataTable.init();</script>
}