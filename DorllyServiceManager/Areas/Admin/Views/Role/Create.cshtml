@model DorllyService.Domain.Role
@{
    ViewBag.Title = "添加角色";
}

<div class="col-lg-6 col-sm-6 col-xs-12">
    <div class="widget">
        <div class="widget-header bordered-bottom bordered-blue">
            <span class="widget-caption">@ViewBag.Title</span>
        </div>
        <div class="widget-body">
            <div>
                <form role="form" method="post" asp-area="admin" asp-controller="role" asp-action="create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Code"></label>
                        <input type="text" class="form-control" asp-for="Code" placeholder="编码">
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input type="text" class="form-control" asp-for="Name" placeholder="角色名">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Status"></label>
                        <select asp-for="Status" class="form-control">
                            <option value="True">启用</option>
                            <option value="False">禁用</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <span class="input-icon icon-right">
                            <textarea class="form-control" asp-for="Description" rows="10"></textarea>
                            <i class="glyphicon glyphicon-briefcase darkorange"></i>
                        </span>
                        <p class="help-block">权限的简单描述，请不要超过500字。</p>
                    </div>

                    <button type="submit" class="btn btn-blue">提交</button>
                </form>
                <div>
                    <a asp-action="Index">返回列表</a>
                </div>
            </div>
        </div>
    </div>
</div>
