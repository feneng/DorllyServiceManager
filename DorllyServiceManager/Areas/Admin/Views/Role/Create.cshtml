@model DorllyService.Domain.Role
@{
    Layout = null;
    ViewBag.Title = "添加角色";
}

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <form role="form" method="post" asp-area="admin" asp-controller="role" asp-action="create" id="createform">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code"></label>
                <input type="text" class="form-control" asp-for="Code" placeholder="编码">
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="角色名">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status"></label>
                <select asp-for="Status" class="form-control">
                    <option value="True">启用</option>
                    <option value="False">禁用</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <span class="input-icon icon-right">
                    <textarea class="form-control" asp-for="Description" rows="10"></textarea>
                    <i class="glyphicon glyphicon-briefcase darkorange"></i>
                </span>
                <p class="help-block">角色的简单描述，请不要超过500字。</p>
            </div>
        </form>
    </div>
</div>
