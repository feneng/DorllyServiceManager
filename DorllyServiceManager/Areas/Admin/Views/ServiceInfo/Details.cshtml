@model DorllyService.Domain.Service
@{ Layout = null;
    ViewBag.PageCode = "服务";
    ViewBag.Title = $"{ViewBag.PageCode}详情"; }

<div class="row">
    <div class="col-md-12">
        <div class="form-title">
            @(ViewBag.PageCode)基本信息
        </div>
        <div class="form-group">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name" readonly="readonly">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <label asp-for="Code"></label>
                <input type="text" class="form-control" asp-for="Code" readonly="readonly">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name" readonly="readonly">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <label asp-for="CategoryId"></label>
                <input type="text" class="form-control" asp-for="Category.Name" readonly="readonly">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <label asp-for="State"></label>
                <input type="text" class="form-control" asp-for="StateName" readonly="readonly">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <label asp-for="UpdateDate"></label>
                <input type="text" class="form-control" asp-for="UpdateDate" readonly="readonly">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-6 col-sm-6 col-xs-12">
                <label asp-for="UpdateUser"></label>
                <input type="text" class="form-control" asp-for="UpdateUser.Name" readonly="readonly">
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <label asp-for="Description"></label>
                <span class="input-icon icon-right">
                    <textarea class="form-control" asp-for="Description" rows="10" readonly="readonly"></textarea>
                </span>
            </div>
        </div>
    </div>
</div>
