@model DorllyService.Domain.Service
@{
    Layout = null;
    ViewBag.PageCode = "服务";
    ViewBag.Title = "添加" + ViewBag.PageCode;
}

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <form role="form" method="post" asp-area="admin" asp-controller="ServiceInfo" asp-action="create" id="createform">
            <div class="form-title">
                基本信息
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Name"></label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="@(ViewBag.PageCode)名">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Code"></label>
                    <input type="text" class="form-control" asp-for="Code" placeholder="@(ViewBag.PageCode)编码">
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.ServiceCategories">
                        <option value="">-- 选择所属分类 --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="State"></label>
                    <select asp-for="State" class="form-control">
                        <option value="1">启用</option>
                        <option value="0">禁用</option>
                    </select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <label asp-for="Description"></label>
                    <span class="input-icon icon-right">
                        <textarea class="form-control" asp-for="Description" rows="10"></textarea>
                        <i class="glyphicon glyphicon-briefcase darkorange"></i>
                    </span>
                    <p class="help-block">服务的描述，请不要超过500字。</p>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>
