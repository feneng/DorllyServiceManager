@model DorllyService.Domain.Permission
@{
    Layout = null;
    ViewBag.Title = $"删除权限";
}

<div class="row">
    <div class="col-md-12">
        <form role="form" method="post" asp-area="Admin" asp-controller="Permission" asp-action="Delete" id="deleteform">
            <input asp-for="Id" type="hidden" />
            <div class="form-title">
                @(ViewBag.PageCode)基本信息
            </div>

            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Code"></label>
                    <input type="text" class="form-control" asp-for="Code" readonly="readonly">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Icon"></label>
                    <input type="text" class="form-control" asp-for="Icon" readonly="readonly">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Name"></label>
                    <input type="text" class="form-control" asp-for="Name" readonly="readonly">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Type"></label>
                    <input type="text" class="form-control" asp-for="TypeName" readonly="readonly">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Status"></label>
                    <input type="text" class="form-control" asp-for="StateName" readonly="readonly">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="BelongModuleId"></label>
                    <input type="text" class="form-control" asp-for="BelongModule.Name" readonly="readonly">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Path"></label>
                    <input type="text" class="form-control" asp-for="Path" readonly="readonly">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Order"></label>
                    <input type="text" class="form-control" asp-for="Order" readonly="readonly">
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <label asp-for="Description"></label>
                    <span class="input-icon icon-right">
                        <textarea class="form-control" asp-for="Description" rows="10" readonly="readonly"></textarea>
                    </span>
                </div>
            </div>
        </form>
    </div>
</div>
