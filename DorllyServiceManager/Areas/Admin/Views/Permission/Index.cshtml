@model List<DorllyService.Domain.Permission>
@{
    ViewBag.Title = "权限列表";
}

@section styles{
    <environment include="Development">
        <link href="~/Admin/css/dataTables.bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/Admin/css/dataTables.bootstrap.css" rel="stylesheet" />
    </environment>
}

<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">@ViewBag.Title</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    <a href="#" data-toggle="dispose">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <a class="btn btn-success create">
                        添加权限
                    </a>
                    <div class="btn-group pull-right">
                        <a class="btn btn-default" href="javascript:void(0);">其他操作</a>
                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);"><i class="fa fa-angle-down"></i></a>
                        <ul class="dropdown-menu dropdown-default">
                            <li>
                                <a href="javascript:void(0);" onclick="Index.EditPermissionRole(event)">编辑权限角色</a>
                            </li>

                        </ul>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered" id="editabledatatable">
                    <thead>
                        <tr role="row">
                            <th>
                                <label>
                                    <input type="checkbox" class="group-checkable">
                                    <span class="text"></span>
                                </label>
                            </th>
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().Code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().Path)
                            </th>
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().Order)
                            </th>
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().Icon)
                            </th>
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().BelongModuleId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().Type)
                            </th>
                            <th>
                                @Html.DisplayNameFor(p => p.FirstOrDefault().Description)
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="11">暂无数据</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <label>
                                            <input type="checkbox" class="checkboxes checkItem" data-id="@item.Id" />
                                            <span class="text"></span>
                                        </label>
                                    </td>
                                    <td>@Html.DisplayFor(p => item.Code)</td>
                                    <td>@Html.DisplayFor(p => item.Name)</td>
                                    <td>@Html.DisplayFor(p => item.Path)</td>
                                    <td>@Html.DisplayFor(p => item.Order)</td>
                                    <td>@Html.DisplayFor(p => item.Status)</td>
                                    <td>@Html.DisplayFor(p => item.Icon)</td>
                                    <td>@Html.DisplayFor(p => item.BelongModuleId)</td>
                                    <td>@Html.DisplayFor(p => item.Type)</td>
                                    <td>@Html.DisplayFor(p => item.Description)</td>
                                    <td>
                                        <a data-id="@item.Id" class="btn btn-info btn-xs edit"><i class="fa fa-edit"></i> 编辑</a>
                                        <a data-id="@item.Id" class="btn btn-danger btn-xs delete"><i class="fa fa-trash-o"></i> 删除</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var Index = (function ($) {
            var config = {
                checkItemId: [],
            };

            return {
                init: function (setting) {
                    //extend page config
                    if (!!setting) $.extend(config, setting);
                    //create action 
                    $('.create').on('click', Index.Create);
                    //edit action 
                    $('.edit').on('click', Index.Edit);
                    //delete action  
                    $('.delete').on('click', Index.Delete);
                    //check all row 
                    $('.group-checkable').on('click', function () {
                        $('td>label>.text').trigger('click');
                    });
                    //check single row 
                    $('td>label>.text').on('click', function (e) {
                        $(this).siblings('.checkItem').trigger('check');
                    });
                    $('.checkItem').on('check', function () {
                        var currentId = $(this).data('id');
                        var index = config.checkItemId.indexOf(currentId);
                        if (!$(this).is(':checked')) {
                            if (index == -1)
                                config.checkItemId.push(currentId);
                        }
                        else {
                            if (index != -1)
                                config.checkItemId.splice(index, 1);
                        }
                    });
                    //set permission role 
                    $('body').on('click', '.alterPermissionRoleItem', function (e) {
                        e.preventDefault();
                        var $checkbox = $(this).siblings('input[type="checkbox"]');
                        var checkedFlag = $checkbox.prop('checked');
                        $checkbox.prop('checked', !checkedFlag);
                        $(this).toggleClass('blue')
                            .html(checkedFlag ? '<i class="fa fa-plus-square-o"></i> 添加' : '<i class="fa fa-trash-o"></i> 删除');
                    });
                },
                Create: function () {
                    bootbox.dialog({
                        loadPage: true,
                        message: "/Admin/Permission/Create",
                        title: "添加权限",
                        className: "modal-darkorange",
                        buttons: {
                            success: {
                                label: "提交",
                                className: "btn-blue",
                                callback: function () {
                                    $('#createform').submit();
                                }
                            },
                            cancel: {
                                label: "返回列表",
                                className: "btn-danger",
                            }
                        }
                    });
                },
                Edit: function () {
                    var id = $(this).data('id');
                    bootbox.dialog({
                        loadPage: true,
                        message: "/Admin/Permission/Edit/" + id,
                        title: "编辑权限",
                        className: "modal-darkorange",
                        buttons: {
                            success: {
                                label: "提交",
                                className: "btn-blue",
                                callback: function () {
                                    $('#editform').submit();
                                }
                            },
                            cancel: {
                                label: "取消",
                                className: "btn-danger",
                            }
                        }
                    });
                },
                Delete: function () {
                    var id = $(this).data('id');
                    bootbox.dialog({
                        loadPage: true,
                        message: "/Admin/Permission/Delete/" + id,
                        title: "删除权限",
                        className: "modal-darkorange",
                        buttons: {
                            success: {
                                label: "确认删除",
                                className: "btn-danger",
                                callback: function () {
                                    $('#deleteform').submit();
                                }
                            },
                            cancel: {
                                label: "取消",
                                className: "btn-default",
                            }
                        }
                    });
                },
                EditPermissionRole: function (e) {
                    e.preventDefault();
                    if (config.checkItemId.length != 1) {
                        bootbox.alert("只能编辑单条记录，请(只)选择一条！");
                        return;
                    }
                    bootbox.dialog({
                        loadPage: true,
                        message: "/Admin/Permission/EditRole/" + config.checkItemId[0],
                        title: "编辑权限角色",
                        className: "modal-darkorange",
                        buttons: {
                            success: {
                                label: "提交",
                                className: "btn-blue",
                                callback: function () {
                                    $('#editform').submit();
                                }
                            },
                            cancel: {
                                label: "取消",
                                className: "btn-danger",
                            }
                        }
                    });
                },
            };

        })(jQuery);

        Index.init();
    </script>
}