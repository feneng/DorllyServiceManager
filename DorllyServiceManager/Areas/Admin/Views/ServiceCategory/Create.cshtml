@model DorllyService.Domain.ServiceCategory
@{
    Layout = null;
    ViewBag.PageCode = "服务分类";
    ViewBag.Title = "添加" + ViewBag.PageCode;
}

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <form role="form" method="post" asp-area="admin" asp-controller="ServiceCategory" asp-action="create" id="createform">
            <div class="form-title">
                基本信息
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Name"></label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="@(ViewBag.PageCode)名">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Code"></label>
                    <input type="text" class="form-control" asp-for="Code" placeholder="@(ViewBag.PageCode)编码">
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="ParentId"></label>
                    <input type="text" class="form-control" asp-for="Parent.Name" readonly="readonly">
                    <input type="hidden" asp-for="ParentId" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Level"></label>
                    <input type="text" class="form-control" asp-for="Level">
                    <span asp-validation-for="Level" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <label asp-for="Status"></label>
                    <select asp-for="Status" class="form-control">
                        <option value="True">启用</option>
                        <option value="False">禁用</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <label asp-for="Remark"></label>
                    <span class="input-icon icon-right">
                        <textarea class="form-control" asp-for="Remark" rows="10"></textarea>
                        <i class="glyphicon glyphicon-briefcase darkorange"></i>
                    </span>
                    <p class="help-block">分类的备注，请不要超过500字。</p>
                    <span asp-validation-for="Remark" class="text-danger"></span>
                </div>
            </div>

        </form>
    </div>
</div>

